{
	"name": "ipython",
	"displayName": "ipython",
	"description": "IPython integration supporting direct interactive usage and commands.",
	"version": "2021.9.26",
	"publisher": "HoangKimLai",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Data Science"
	],
	"activationEvents": [
		"onLanguage:python",
		"onCommand:ipython.createTerminal",
		"onCommand:ipython.runFile",
		"ipython.runSelections",
		"ipython.runCell"
	],

	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "IPython",
			"properties": {
				"ipython.launchArgs": {
					"type": "string",
					"default": null,
					"description": "Input command to ipython call on launch (e.g. --matplotlib=qt5)"
				},
				"ipython.startupCommands": {
					"type": "array",
					"default": ["%load_ext autoreload", "%autoreload 2"],
					"description": "Lists of command to execute line-by-line after launching IPython terminal (e.g. '%autoreload 2') "
				}
			}
		},
		"commands": [
			{
				"category": "IPython",
				"command": "ipython.createTerminal",
				"key": "",
				"when": "editorLangId == python",
				"title": "Create a Terminal"
			},
			{
				"category": "IPython",
				"command": "ipython.runFile",
				"key": "",
				"when": "editorLangId == python",
				"title": "Run File in an IPython Terminal"
			},
			{
				"category": "IPython",
				"command": "ipython.runSelections",
				"key": "",
				"when": "editorLangId == python",
				"title": "Run each Selected Code in a IPython Terminal"
			},
			{
				"category": "IPython",
				"command": "ipython.runCell",
				"key": "",
				"when": "editorLangId == python",
				"title": "Run a Cell Block Identified by '# %%'"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"@vscode/test-electron": "^1.6.2"
	}
}
